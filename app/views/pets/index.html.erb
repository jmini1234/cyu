<html>
<!--
//기능: 날짜, 좋아요, 삭제(신고)
//필요 페이지: 메인페이지, 사진보여주는페이지, 글작성페이지, 로그인페이지 (4)
-->
<head>
  <meta charset="UTF-8" />
  <link href="https://fonts.googleapis.com/css?family=Happy+Monkey|Major+Mono+Display" rel="stylesheet">
  <link rel="stylesheet" href="/assets/style.css" />
  <link rel="stylesheet" href="/assets/upload.css" />
  <script src="http://code.jquery.com/jquery-latest.js"></script>
  <script type="text/javascript" src="/assets/script.js"></script>

</head>
  <body id="body">
    <div class="container" id="container">



<!-- HEADING -->
      <div class="heading">
        <%= image_tag ("logo.png"), id: "logo" %>
        <hr />
        <ul class="flex-container">
          <li class="flex-item">
            <a href="/" class="selected">home</a>
          </li>
          <li class="flex-item">
            <a href="#" class="btn_toggle"> upload </a>
          </li>
          <li class="flex-item">
            <a href="/signin" id="login">login</a>
          </li>
        </ul>
        <hr />
      </div>


      <%= form_tag({controller:"pets", action:"create"}, method: "post", class: "upload", id: "upload") do %>
        <div class="file-preview"></div>
        <input type="file" name="pet[file]" class="inputfile"/><br />    
        <input type="submit" name="submit" class="submitFile" value="UPLOAD IMAGE" />
      <% end %>

<!-- IMAGE MANSONRY -->
      <div class="masonry">
        <% @pets.each do |pet| %>
        <div class="item1">
            <%= image_tag (pet.image) %>
          <div class="img-caption1 bottom-top1">
            <% if current_user.is_Like?(pet) %>
              <%= link_to 'Dislike', pet_like_path(pet), method: "post" %>
              <% else %>
              <%= link_to 'Like', pet_like_path(pet), method: "post" %>
            <% end %>

            <% if current_user.is_Report?(pet) %>
              <%= link_to 'Cancel', pet_report_path(pet), method: "post" %>
              <% else %>
              <%= link_to 'Report', pet_report_path(pet), method: "post" %>
            <% end %>
            <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      <% end %>
      </div>

<!-- JS -->


    </div>
  </body>
</html>